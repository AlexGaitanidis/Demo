@page "/"
@inherits UsersBase

<h4>Current users</h4>
@if (Users == null)
{
    <h3>Loading users...</h3>
}
else
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Role Id</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Users)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.RoleId</td>
            </tr>
        }
        </tbody>
    </table>
}